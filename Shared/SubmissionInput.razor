@using HCatalystProjectCostsSite.Models
@using HCatalystProjectCostsSite.Enums

<MudStack Row="true" AlignItems="AlignItems.Center">
    <MudSelect Variant="Variant.Outlined" T="Project" Label="Project" 
               AnchorOrigin="Origin.BottomCenter" @bind-Value="@submission.project">
            @foreach(var project in Enum.GetValues<Project>())
            {
                <MudSelectItem Value="project"/>
            }
        </MudSelect>
    <MudTextField @bind-Value="@submission.title" Label="Title" Variant="Variant.Outlined"/>
    <MudSelect T="Submitter" Label="Submitted By" AnchorOrigin="Origin.BottomCenter" @bind-Value="@submission.author"
               Variant="Variant.Outlined">
        @foreach (var submitter in Enum.GetValues<Submitter>())
        {
            <MudSelectItem Value="submitter"/>
        }
    </MudSelect>
</MudStack>

<MudTextField @bind-Value="@submission.text" Label="Description" Variant="Variant.Outlined" Lines="5" />

@code {

    [Parameter]
    public Submission submission { get; set; } = new();

}